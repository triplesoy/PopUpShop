<div class="container mx-auto mt-4">
  <div class="row">
    <% @my_bookings.each do |booking| %>
      <div class="col-lg-3 my-3">
        <div class="card" style="width: 18rem; height: 22rem;">
          <img src="<%= booking.venue.img_url %>" class="card-img-top" alt="Listing Image">
          <div class="card-body position-relative">
            <h5 class="card-title"><%= booking.venue.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted"></h6>
            <p class="card-text position-absolute bottom-0 start-2 fw-bold"><%= (((booking.end_date - booking.start_date)+ 1).to_i * booking.venue.daily_rate).to_f %>â‚¬</p>
            <%= link_to "Details", venue_booking_path(booking.venue, booking), class: "btn btn-outline-dark position-absolute bottom-1 end-0 m-2" %>
            <%= link_to "Delete", venue_booking_path(booking.venue, booking), class: "btn btn-outline-danger position-absolute bottom-0 end-0 m-2",
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
